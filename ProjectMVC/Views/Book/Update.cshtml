
@model BookPostVM


<div class="container mt-3">
    <h1 class="text text-success">Create course</h1>
    <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
    <form method="post" class="mt-2" enctype="multipart/form-data">

        <div class="mb-2">
            <label asp-for="@Model.Books.ImageFile" class="form-label">Book image</label>
            <input asp-for="@Model.Books.ImageFile" accept="image/*" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.Books.ImageFile"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Books.AuthorId" class="form-label">Author</label>
            <select asp-for="@Model.Books.AuthorId" class="form-select" asp-items="@(new SelectList(Model.Authors.Items,"Id","Name"))">
            </select>
            <span class="mt-2 text text-danger" asp-validation-for="@Model.Books.AuthorId"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Books.GenreId" class="form-label">Genre</label>
            <select asp-for="@Model.Books.GenreId" class="form-select" asp-items="@(new SelectList(Model.Genres.Items,"Id","Name"))">
            </select>
            <span class="mt-2 text text-danger" asp-validation-for="@Model.Books.GenreId"></span>
        </div>

        <div class="mb-2">
            <label asp-for="@Model.Books.Name" class="form-label">Name</label>
            <input asp-for="@Model.Books.Name" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.Books.Name"></span>
        </div>
        <div class="mb-2">
            <label asp-for="@Model.Books.CostPrice" class="form-label">Costprice</label>
            <input asp-for="@Model.Books.CostPrice" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.Books.CostPrice"></span>
        </div>
        <div class="mb-2">
            <label asp-for="@Model.Books.SalePrice" class="form-label">SalePrice</label>
            <input asp-for="@Model.Books.SalePrice" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.Books.SalePrice"></span>
        </div>
        <div class="mb-2">
            <label asp-for="@Model.Books.PageCount" class="form-label">PageCount</label>
            <input asp-for="@Model.Books.PageCount" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.Books.PageCount"></span>
        </div>
        <div class="mb-2">
            <label asp-for="@Model.Books.Language" class="form-label">Language</label>
            <input asp-for="@Model.Books.Language" class="form-control">
            <span class="mt-2 text text-danger" asp-validation-for="@Model.Books.Language"></span>
        </div>



        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js" integrity="sha512-37T7leoNS06R80c8Ulq7cdCDU5MNQBwlYoy1TX/WUsLFC2eYNqtKlV0QjH7r8JpG/S0GUMZwebnVFLPd6SU5yg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js" integrity="sha512-o6XqxgrUsKmchwy9G5VRNWSSxTS4Urr4loO6/0hYdpWmFUfHqGzawGxeQGMDqYzxjY9sbktPbNlkIQJWagVZQg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
}
